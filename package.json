{
  "name": "ext-logic",
  "version": "1.0.0",
  "license": "MIT",
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "commander": "^8.3.0",
    "typescript": "^4.4.2"
  },
  "devDependencies": {
    "@types/node": "^16.7.8",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "ts-node": "^10.2.1",
    "typescript-cp": "^0.1.5"
  },
  "scripts": {
    "antlr": "antlr4ts grammar/ExtLogicParser.g4 -o src/antlr -lib grammar/.antlr && antlr4ts grammar/ExtLogicLexer.g4 -o src/antlr -lib grammar/.antlr",
    "clean": "rmdir src\\antlr /Q /S",
    "buildAntlr": "yarn run clean && yarn run antlr",
    "build": "tsc && tscp",
    "dev": "ts-node src/index.ts",
    "start": "node build/index.js",
    "mine": "node build/index.js mindustry/main.exlog | clip",
    "mineDev": "yarn run build && yarn run mine"
  },
  "bin": {
    "exlog": "build/bin/exlog.js"
  }
}
